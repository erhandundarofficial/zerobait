generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  username  String?  @unique
  passwordHash String?
  name      String?
  googleId  String?  @unique
  imageUrl  String?
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gameSessions GameSession[]
  urlReports   UrlReport[]
}

model Url {
  id            String         @id @default(cuid())
  originalUrl   String
  normalizedUrl String         @unique
  createdAt     DateTime       @default(now())

  reports         UrlReport[]
  threatIntelHits ThreatIntelHit[]
}

model UrlReport {
  id        String   @id @default(cuid())
  reason    String?
  createdAt DateTime @default(now())

  urlId  String
  url    Url   @relation(fields: [urlId], references: [id])

  userId String?
  user   User? @relation(fields: [userId], references: [id])
}

model Game {
  id          String   @id @default(cuid())
  key         String   @unique
  title       String
  description String
  type        String
  createdAt   DateTime @default(now())

  sessions GameSession[]
}

model GameSession {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  gameId      String
  game        Game     @relation(fields: [gameId], references: [id])
  score       Int
  difficulty  String   @default("unknown")
  startedAt   DateTime @default(now())
  completedAt DateTime?

  @@index([userId, gameId, difficulty])
}

model ThreatIntelHit {
  id        String   @id @default(cuid())
  provider  String
  verdict   String
  createdAt DateTime @default(now())

  urlId String
  url   Url @relation(fields: [urlId], references: [id])
}

model ScanResult {
  id        String   @id @default(cuid())
  url       String   @unique @db.Text
  riskScore Int
  data      Json     @db.JsonB
  createdAt DateTime @default(now()) @map("created_at")

  @@map("scan_results")
}
